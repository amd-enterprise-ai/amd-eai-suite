<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd
                   http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
  <changeSet author="eugenek" id="add-workloads-table">
      <createTable tableName="workloads">
          <column name="id" type="uuid">
              <constraints primaryKey="true" primaryKeyName="workloads_pkey"/>
          </column>
          <column name="cluster_id" type="uuid">
              <constraints references="clusters(id)" foreignKeyName="workloads_clusters_id_fkey" nullable="false" deleteCascade="true"/>
          </column>
          <column name="status" type="character varying">
              <constraints nullable="false"/>
          </column>
           <column name="created_at" type="timestamp with time zone">
              <constraints nullable="false"/>
          </column>
          <column name="updated_at" type="timestamp with time zone">
              <constraints nullable="false"/>
          </column>
          <column name="updated_by" type="character varying" />
          <column name="created_by" type="character varying" />
      </createTable>
  </changeSet>
</databaseChangeLog>
