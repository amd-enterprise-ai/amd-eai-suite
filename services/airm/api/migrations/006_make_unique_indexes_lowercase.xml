<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd
                   http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

<changeSet author="akshay" id="make-unique-indexes-lowercase">
    <dropUniqueConstraint constraintName="organizations_name_key" tableName="organizations" />
    <dropUniqueConstraint constraintName="users_email_key" tableName="users" />
    <dropIndex indexName="ix_user_group_name_organization_id" tableName="user_groups" />
    <dropIndex indexName="ix_cluster_name_organization_id" tableName="clusters"  />

    <createIndex indexName="organizations_name_key" tableName="organizations" unique="true">
        <column name="lower(name::text)"/>
    </createIndex>
    <createIndex indexName="users_email_key" tableName="users" unique="true">
        <column name="lower(email::text)"/>
    </createIndex>
    <createIndex indexName="user_group_name_organization_id_key" tableName="user_groups" unique="true">
        <column name="lower(name::text)"/>
        <column name="organization_id"/>
    </createIndex>
    <createIndex indexName="cluster_name_organization_id_key" tableName="clusters" unique="true">
        <column name="lower(name::text)"/>
        <column name="organization_id"/>
    </createIndex>

</changeSet>
</databaseChangeLog>
