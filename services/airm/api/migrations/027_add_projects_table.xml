<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet id="add-projects-table" author="eugenek">
        <createTable tableName="projects">
            <column name="name" type="character varying">
                <constraints nullable="false"/>
            </column>
            <column name="organization_id" type="uuid">
                <constraints references="organizations(id)" foreignKeyName="projects_organization_id_fkey" nullable="false" deleteCascade="true"/>
            </column>
            <column name="description" type="character varying"/>
            <column name="id" type="uuid">
                <constraints primaryKey="true" primaryKeyName="projects_pkey"/>
            </column>
            <column name="created_at" type="timestamp with time zone">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp with time zone">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="character varying"/>
            <column name="updated_by" type="character varying"/>
        </createTable>

        <createIndex indexName="projects_name_organization_id" tableName="projects" unique="true">
            <column name="lower(name::text)"/>
            <column name="organization_id"/>
        </createIndex>
        <createIndex indexName="projects_organization_id" tableName="projects">
            <column name="organization_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
