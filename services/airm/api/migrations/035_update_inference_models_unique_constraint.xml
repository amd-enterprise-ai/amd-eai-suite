<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd
                   http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet author="tomas" id="update-inference-models-unique-constraint">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="1">
                SELECT count(*) FROM pg_indexes WHERE indexname = 'inference_models_name_cluster_id_key' AND tablename = 'inference_models';
            </sqlCheck>
        </preConditions>
        <comment>Replace the unique constraint on (name, cluster_id) with (name, cluster_id, project_id) for inference_models table</comment>

        <!-- Drop the existing unique index -->
        <dropIndex indexName="inference_models_name_cluster_id_key" tableName="inference_models"/>

        <!-- Create the new unique index with project_id included -->
        <createIndex indexName="inference_models_name_cluster_id_project_id_key" tableName="inference_models" unique="true">
            <column name="lower(name::text)"/>
            <column name="cluster_id"/>
            <column name="project_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
