<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <changeSet id="add-namespace-table" author="eugenek">
    <createTable tableName="namespaces">
      <column name="id" type="uuid">
        <constraints primaryKey="true" primaryKeyName="namespaces_pkey"/>
      </column>
      <column name="name" type="character varying">
        <constraints nullable="false"/>
      </column>
      <column name="cluster_id" type="uuid">
        <constraints references="clusters(id)" foreignKeyName="namespaces_clusters_id_fkey" nullable="false" deleteCascade="true"/>
      </column>
      <column name="status" type="character varying">
        <constraints nullable="false"/>
      </column>
      <column name="status_reason" type="character varying">
        <constraints nullable="true"/>
      </column>
      <column name="project_id" type="uuid">
        <constraints references="projects(id)" foreignKeyName="namespaces_projects_id_fkey" nullable="false" deleteCascade="true"/>
      </column>
      <column name="created_at" type="timestamp with time zone">
        <constraints nullable="false"/>
      </column>
      <column name="updated_at" type="timestamp with time zone">
          <constraints nullable="false"/>
      </column>
      <column name="created_by" type="character varying" />
      <column name="updated_by" type="character varying" />
    </createTable>
    <createIndex
      tableName="namespaces"
      indexName="namespaces_project_id">
      <column name="project_id"/>
    </createIndex>
    <createIndex
      tableName="namespaces"
      indexName="namespaces_cluster_id">
      <column name="cluster_id"/>
    </createIndex>
  </changeSet>
</databaseChangeLog>
