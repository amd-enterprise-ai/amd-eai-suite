<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="add-base-url-to-cluster-add-column" author="rinflian">
        <addColumn tableName="clusters">
            <column name="base_url" type="varchar(255)" defaultValue="https://k8s.oci1.silogen.ai">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
    <changeSet id="add-base-url-to-cluster-update" author="rinflian">
        <sql>
        UPDATE clusters
        SET
            updated_at = NOW(),
            updated_by = 'system'
        </sql>
    </changeSet>
</databaseChangeLog>
