<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <changeSet id="add-secrets-and-project-secrets-tables" author="clydehoang1">
        <!-- Create Secret table -->
        <createTable tableName="secrets">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="organization_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="character varying">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="character varying">
                <constraints nullable="false"/>
            </column>
            <column name="scope" type="character varying">
                <constraints nullable="false"/>
            </column>
            <column name="manifest" type="character varying">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="character varying">
                <constraints nullable="false"/>
            </column>
            <column name="status_reason" type="character varying"/>
            <column name="created_at" type="timestamp with time zone">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp with time zone">
              <constraints nullable="false"/>
            </column>
            <column name="created_by" type="character varying" />
            <column name="updated_by" type="character varying" />
        </createTable>

        <!-- Unique constraint on (organization_id, name) -->
        <addUniqueConstraint
            columnNames="organization_id, name"
            tableName="secrets"
            constraintName="uq_secret_org_name"/>

        <!-- FK: secret.organization_id â†’ organization.id -->
        <addForeignKeyConstraint
            baseTableName="secrets"
            baseColumnNames="organization_id"
            referencedTableName="organizations"
            referencedColumnNames="id"
            constraintName="fk_secret_to_organization"/>

        <!-- Create ProjectSecret table -->
        <createTable tableName="project_secrets">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="project_id" type="uuid">
                <constraints references="projects(id)" foreignKeyName="fk_project_secret_to_project" nullable="false" deleteCascade="true"/>
            </column>
            <column name="secret_id" type="uuid">
                <constraints references="secrets(id)" foreignKeyName="fk_project_secret_to_secret" nullable="false" deleteCascade="true"/>
            </column>
            <column name="status" type="character varying">
                <constraints nullable="false"/>
            </column>
            <column name="status_reason" type="character varying"/>
            <column name="created_at" type="timestamp with time zone">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp with time zone">
              <constraints nullable="false"/>
            </column>
            <column name="created_by" type="character varying" />
            <column name="updated_by" type="character varying" />
        </createTable>

        <!-- Unique constraint on (project_id, secret_id) -->
        <addUniqueConstraint
            columnNames="project_id, secret_id"
            tableName="project_secrets"
            constraintName="uq_project_secret_combination"/>

        <createIndex indexName="ix_project_secret_secret_id" tableName="project_secrets">
            <column name="secret_id"/>
        </createIndex>
  </changeSet>
</databaseChangeLog>
