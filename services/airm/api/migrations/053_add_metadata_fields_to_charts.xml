<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <!-- Add description column if it doesn't exist -->
  <changeSet id="add-description-to-charts" author="lorenzo">
    <preConditions onFail="MARK_RAN">
      <not>
        <columnExists tableName="charts" columnName="description"/>
      </not>
    </preConditions>
    <addColumn tableName="charts">
      <column name="description" type="character varying">
        <constraints nullable="true"/>
      </column>
    </addColumn>
  </changeSet>

  <!-- Add long_description column if it doesn't exist -->
  <changeSet id="add-long-description-to-charts" author="lorenzo">
    <preConditions onFail="MARK_RAN">
      <not>
        <columnExists tableName="charts" columnName="long_description"/>
      </not>
    </preConditions>
    <addColumn tableName="charts">
      <column name="long_description" type="text">
        <constraints nullable="true"/>
      </column>
    </addColumn>
  </changeSet>

