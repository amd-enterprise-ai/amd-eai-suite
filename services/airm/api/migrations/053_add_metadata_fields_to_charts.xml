  <changeSet id="add-featured-image-to-charts" author="lorenzo">
    <preConditions onFail="MARK_RAN">
      <not>
        <columnExists tableName="charts" columnName="featured_image"/>
      </not>
    </preConditions>
    <addColumn tableName="charts">
      <column name="featured_image" type="character varying">
        <constraints nullable="true"/>
      </column>
    </addColumn>
  </changeSet>

  <!-- Add required_resources column if it doesn't exist -->
