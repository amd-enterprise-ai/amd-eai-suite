      <not>
        <columnExists tableName="charts" columnName="required_resources"/>
      </not>
    </preConditions>
    <addColumn tableName="charts">
      <column name="required_resources" type="jsonb">
        <constraints nullable="true"/>
      </column>
    </addColumn>
  </changeSet>

  <!-- Add external_url column if it doesn't exist -->
  <changeSet id="add-external-url-to-charts" author="lorenzo">
    <preConditions onFail="MARK_RAN">
      <not>
        <columnExists tableName="charts" columnName="external_url"/>
      </not>
    </preConditions>
    <addColumn tableName="charts">
      <column name="external_url" type="character varying">
        <constraints nullable="true"/>
      </column>
    </addColumn>
  </changeSet>

  <!-- Rename user_inputs column to signature if it exists -->
  <changeSet id="rename-user-inputs-to-signature" author="cascade">
    <preConditions onFail="MARK_RAN">
      <columnExists tableName="charts" columnName="user_inputs"/>
    </preConditions>
    <renameColumn tableName="charts" oldColumnName="user_inputs" newColumnName="signature"/>
  </changeSet>

</databaseChangeLog>
