<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <changeSet id="add-huggingface-secret-support" author="rominf">

    <!-- Add use_case column to secrets table -->
    <addColumn tableName="secrets">
      <column name="use_case" type="character varying">
        <constraints nullable="true"/>
      </column>
    </addColumn>

    <!-- Add index on use_case for query performance -->
    <createIndex tableName="secrets" indexName="idx_secrets_use_case">
      <column name="use_case"/>
    </createIndex>

  </changeSet>
</databaseChangeLog>
