<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="org_cascade_delete_secrets_and_storages" author="clydehoang1">
        <dropForeignKeyConstraint baseTableName="secrets" constraintName="fk_secret_to_organization"/>
        <dropForeignKeyConstraint baseTableName="storages" constraintName="fk_storage_to_organization"/>
        <dropForeignKeyConstraint baseTableName="storages" constraintName="fk_storage_to_secret"/>

        <addForeignKeyConstraint
            baseTableName="secrets"
            baseColumnNames="organization_id"
            referencedTableName="organizations"
            referencedColumnNames="id"
            constraintName="fk_secret_to_organization"
            deleteCascade="true"/>

        <addForeignKeyConstraint
            baseTableName="storages"
            baseColumnNames="organization_id"
            referencedTableName="organizations"
            referencedColumnNames="id"
            constraintName="fk_storage_to_organization"
            deleteCascade="true"/>

        <addForeignKeyConstraint
            baseTableName="storages"
            baseColumnNames="secret_id"
            referencedTableName="secrets"
            referencedColumnNames="id"
            constraintName="fk_storage_to_secret"
            deleteCascade="true"/>
    </changeSet>
</databaseChangeLog>
