<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="add-project-id-to-secrets-and-make-manifest-nullable" author="eugenek">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="secrets" columnName="project_id"/>
            </not>
        </preConditions>
        <addColumn tableName="secrets">
            <column name="project_id" type="uuid">
                <constraints nullable="true" />
            </column>
        </addColumn>
        <addForeignKeyConstraint
            baseTableName="secrets"
            baseColumnNames="project_id"
            referencedTableName="projects"
            referencedColumnNames="id"
            constraintName="fk_secrets_project_id"
            onDelete="CASCADE" />
        <dropNotNullConstraint tableName="secrets" columnName="manifest" />
        <createIndex tableName="secrets" indexName="idx_secrets_project_id">
            <column name="project_id" />
        </createIndex>
    </changeSet>
</databaseChangeLog>
