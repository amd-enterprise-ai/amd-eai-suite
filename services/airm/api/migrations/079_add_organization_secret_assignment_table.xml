<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <changeSet id="add-organization-secret-assignment-table" author="eugenek">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="organization_secret_assignments"/>
            </not>
        </preConditions>
        <createTable tableName="organization_secret_assignments">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="organization_secret_id" type="uuid">
                <constraints references="secrets(id)" foreignKeyName="fk_org_secret_assignment_to_secret" nullable="false" deleteCascade="true"/>
            </column>
            <column name="status" type="character varying">
                <constraints nullable="false"/>
            </column>
            <column name="status_reason" type="character varying"/>
            <column name="project_id" type="uuid">
                <constraints references="projects(id)" foreignKeyName="fk_org_secret_assignment_to_project" nullable="false" deleteCascade="true"/>
            </column>
            <column name="created_at" type="timestamp with time zone">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="character varying" />
            <column name="updated_at" type="timestamp with time zone">
              <constraints nullable="false"/>
            </column>
            <column name="updated_by" type="character varying" />
        </createTable>
        <createIndex indexName="ix_org_secret_assignment_secret_id" tableName="organization_secret_assignments">
            <column name="organization_secret_id"/>
        </createIndex>
        <createIndex indexName="ix_org_secret_assignment_project_id" tableName="organization_secret_assignments">
            <column name="project_id"/>
        </createIndex>
  </changeSet>
</databaseChangeLog>
