<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="add-secret-constraint-org-proj-name-type" author="eugenek">
        <preConditions onFail="MARK_RAN">
            <and>
                <not>
                    <indexExists tableName="secrets" indexName="uq_secret_org_proj_name_type"/>
                </not>
                <indexExists tableName="secrets" indexName="uq_secret_org_name"/>
            </and>
        </preConditions>
        <dropUniqueConstraint
            tableName="secrets"
            constraintName="uq_secret_org_name"/>
        <comment>
            Add unique constraint on (organization_id, project_id, name, type)
            with PostgreSQL-specific NULLS NOT DISTINCT behavior. This ensures that 2 org scoped secrets cannot have the same name+type, even if project_id is null.
        </comment>
        <sql>
            ALTER TABLE secrets
            ADD CONSTRAINT uq_secret_org_proj_name_type
            UNIQUE NULLS NOT DISTINCT (organization_id, project_id, name, type);
        </sql>
    </changeSet>
</databaseChangeLog>
