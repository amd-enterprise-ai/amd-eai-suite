<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <changeSet id="update-secret-type-to-secrets-component-kind" author="system">
    <!-- Update SecretType enum values in secrets table to match SecretKind -->
    <!-- Key to Value mappings:
         External -> ExternalSecret
         Secret -> KubernetesSecret (safety update for any old package enum values)
         KubernetesSecret -> KubernetesSecret (no change, already correct)
    -->
    <update tableName="secrets">
      <column name="type" value="ExternalSecret"/>
      <where>type = 'External'</where>
    </update>
    <!-- Safety update: Handle any 'Secret' values that might exist from old package enum -->
    <update tableName="secrets">
      <column name="type" value="KubernetesSecret"/>
      <where>type = 'Secret'</where>
    </update>
  </changeSet>

</databaseChangeLog>
