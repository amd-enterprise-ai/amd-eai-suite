{
  "name": "airm-ui",
  "version": "0.3.0",
  "private": true,
  "packageManager": "pnpm@10.22.0",
  "scripts": {
    "dev": "next --version && cross-env NODE_TLS_REJECT_UNAUTHORIZED=0 next dev --turbopack -p 8010",
    "build": "next --version && next build  --turbopack",
    "start": "next start -p 8000",
    "lint": "biome lint .",
    "format:fix": "biome format --write .",
    "format:check": "biome format .",
    "format:staged": "biome format --write --staged --no-errors-on-unmatched .",
    "format": "pnpm format:check || pnpm format:fix",
    "typecheck": "pnpm tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ci": "vitest run --silent",
    "coverage": "vitest run --coverage",
    "ladle": "ladle serve"
  },
  "pnpm": {
    "overrides": {
      "motion-dom": "12.8.0",
      "motion-utils": "12.7.5"
    }
  },
  "dependencies": {
    "@heroui/react": "^2.8.5",
    "@hookform/resolvers": "^5.0.1",
    "@tabler/icons-react": "^3.30.0",
    "@tanstack/react-query": "^5.65.1",
    "date-fns": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "next": "^15.5.7",
    "next-auth": "^4.24.12",
    "next-i18next": "^15.4.2",
    "next-themes": "^0.4.6",
    "react": "^18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.55.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^15.6.1",
    "react-toastify": "^11.0.3",
    "recharts": "^2.15.1",
    "rehype-mathjax": "^7.1.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "yaml": "^2.8.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@ladle/react": "^5.1.1",
    "@mdx-js/react": "^3.1.1",
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/typography": "^0.5.9",
    "@tailwindcss/postcss": "^4.1.16",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^21.1.1",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.17.4",
    "@types/node": "^18.15.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/react-syntax-highlighter": "^15.5.6",
    "@types/uuid": "^9.0.1",
    "@vitejs/plugin-react": "4.3.0",
    "@vitest/browser": "^3.1.2",
    "@vitest/coverage-istanbul": "3.1.2",
    "@vitest/ui": "^3.1.2",
    "autoprefixer": "^10.4.14",
    "cross-env": "^7.0.3",
    "jsdom": "^25.0.1",
    "postcss": "^8.4.21",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.3.2",
    "vite": "^5.4.21",
    "vitest": "^3.1.2"
  }
}
